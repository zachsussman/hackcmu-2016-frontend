<div class="col-xs-12">
  <div class="event-detail">

    <div class="event-detail-top">
      <div class="row">
        <div class="col-xs-10">
          <div class="row">
            <div class="col-xs-12">
              <div class="event-detail-name">
                {{model.name}}
              </div>
            </div>
            <div class="col-xs-12">
              <div class="event-detail-time">
                {{model.time}}
              </div>
            </div>
          </div>
        </div>

        <div class="col-xs-2">
          <div class="event-detail-escape">
            {{#link-to "events"}}<i class="fa fa-times fa-2x" aria-hidden="true"></i> {{/link-to}}
          </div>
        </div>
      </div>
    </div>

    <div class="event-detail-main">
      <div class="row">
        <div class="col-xs-12">
          <div class="event-detail-description">
            {{model.description}}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="event-detail-location">
            {{model.location}}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="event-detail-location">
            Interests: {{model.interestNames}}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="event-detail-sign">
            {{#liquid-if model.going}}
            <button disabled="disabled" class="btn btn-event-disabled" {{action "signdown"}}>Signed <img src="down white.svg" height="50px">!</button>
            {{else}}
            <button class="btn btn-event-detail" {{action "signdown"}}>Sign <img src="down white.svg" height="50px"></button>
            {{/liquid-if}}
          </div>
        </div>
      </div>
    </div>

    <div class="event-detail-bottom">
    </div>
  </div>
</div>
{{liquid-outlet}}
