<div class="login-page">
  <div class="login-topbar">
  </div>

  <div class="login-heading">
    <div class="row">
      <div class="col-xs-12">
        <div class="login-logo">
          <img src="logo light blue.png" height="100px">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="login-signin">
          Sign In
        </div>
      </div>
    </div>
  </div>

  <div class="login-form-box">
    <form class="login-form">
      <div class="form-group">
        <label for="username">Email Address or Username</label>
        <div class="login-input">
          {{input id="username" class="form-control" placeholder="Email Address or Username" value=model.username}}
        </div>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <div class="login-input">
          {{input type="password" id="password" class="form-control" placeholder="Password"}}
        </div>
      </div>
      <div class="form-group login-btn-group">
        <button class="btn btn-login-login" {{action "signin"}}>Sign <img src="down white.svg" height="50px"></button>
      </div>
    </form>
  </div>
</div>

{{outlet}}
